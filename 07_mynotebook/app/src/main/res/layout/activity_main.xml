<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#aa2222"
    android:weightSum="30"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="My Notebook"
        android:textColor="#ffffff"
        android:layout_weight="3"
        android:textSize="35sp"
        android:gravity="center"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:text="Type in your text here"
        android:textColor="#000"
        android:background="#dddddd"
        android:textAlignment="center"
        android:textSize="25sp"/>


    <EditText
        android:layout_width="match_parent"
        android:id="@+id/myEditText"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_weight="19"
        android:layout_height="0dp"
        android:background="#ddd"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10sp"
        android:orientation="horizontal"
        android:layout_weight="5"
        android:weightSum="2"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ccc"
            android:onClick="savePressed"
            android:text="Click here to send text"
            android:textColor="#0a0"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="25sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ccc"
            android:textStyle="bold"
            android:onClick="page2"
            android:text="Page 2"
            android:textColor="#00a"
            android:textSize="25sp" />
    </LinearLayout>

</LinearLayout>

